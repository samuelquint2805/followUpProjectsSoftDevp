@model List<FollowUpWorks.DTOs.EventClassDTO>
<div class="mt-5 pt-4"></div>
<h2>Calendario de Eventos</h2>
<a asp-action="Create" class="btn btn-primary">
    <i class="bi bi-plus-circle me-2"></i>Nuevo Evento
</a>
<table class="table mt-3">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descripción</th>
            <th>Fecha</th>
            <th>Lugar</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.EventDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@item.Location</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@item.idEvent" method="post" style="display:inline;"
                          onsubmit="return confirm('¿Está seguro que desea eliminar este evento?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>