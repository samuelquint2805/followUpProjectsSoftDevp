@{
    ViewData["Title"] = "Cronómetro";
}
<div class="mt-5 pt-4"></div> 
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Cronómetro Principal -->
            <div class="card shadow-lg">
                <div class="card-header bg-dark text-white text-center">
                    <h4 class="mb-0"><i class="bi bi-stopwatch"></i> Cronómetro</h4>
                </div>
                <div class="card-body text-center">
                    <!-- Display del tiempo -->
                    <div class="stopwatch-display my-4" id="display">
                        <span id="hours">00</span>:<span id="minutes">00</span>:<span id="seconds">00</span>.<span id="milliseconds">00</span>
                    </div>

                    <!-- Botones de Control -->
                    <div class="d-flex justify-content-center gap-3 mb-4">
                        <button type="button" class="btn btn-success btn-lg" id="btnStart">
                            <i class="bi bi-play-fill"></i> Iniciar
                        </button>
                        <button type="button" class="btn btn-warning btn-lg" id="btnPause" disabled>
                            <i class="bi bi-pause-fill"></i> Pausar
                        </button>
                        <button type="button" class="btn btn-danger btn-lg" id="btnReset" disabled>
                            <i class="bi bi-arrow-counterclockwise"></i> Reiniciar
                        </button>
                    </div>

                    <!-- Botón de Vuelta -->
                    <div class="mb-4">
                        <button type="button" class="btn btn-info btn-lg w-100" id="btnLap" disabled>
                            <i class="bi bi-flag-fill"></i> Registrar Vuelta
                        </button>
                    </div>

                    <!-- Lista de Vueltas -->
                    <div id="lapsContainer" style="display: none;">
                        <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-3">
                            <h5 class="mb-0">
                                <i class="bi bi-list-ol"></i> Tiempos Parciales
                                <span class="badge bg-secondary" id="lapCount">0</span>
                            </h5>
                            <button type="button" class="btn btn-sm btn-outline-danger" id="btnClearLaps">
                                <i class="bi bi-trash"></i> Limpiar
                            </button>
                        </div>

                        <!-- Estadísticas -->
                        <div class="row text-center mb-3" id="statsContainer" style="display: none;">
                            <div class="col-4">
                                <div class="stat-card bg-success text-white rounded p-2">
                                    <small>Mejor</small>
                                    <div class="fw-bold" id="bestLap">--:--</div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="stat-card bg-info text-white rounded p-2">
                                    <small>Promedio</small>
                                    <div class="fw-bold" id="avgLap">--:--</div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="stat-card bg-danger text-white rounded p-2">
                                    <small>Peor</small>
                                    <div class="fw-bold" id="worstLap">--:--</div>
                                </div>
                            </div>
                        </div>

                        <div class="laps-list" id="lapsList">
                            <!-- Las vueltas se agregan aquí dinámicamente -->
                        </div>
                    </div>
                </div>

                <!-- Atajos de teclado -->
                <div class="card-footer text-muted small text-center">
                    <i class="bi bi-keyboard"></i> Atajos:
                    <kbd>Espacio</kbd> Iniciar/Pausar |
                    <kbd>L</kbd> Vuelta |
                    <kbd>R</kbd> Reiniciar
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/TimeKeeperScript.js"></script>
}

