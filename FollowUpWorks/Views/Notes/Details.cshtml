@model FollowUpWorks.DTOs.NoteClassDTO
@{
    ViewData["Title"] = Model.Title;
}
<div class="mt-5 pt-4"></div>
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="d-flex align-items-center mb-4">
                <a asp-action="Index" class="btn btn-outline-secondary me-3">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <div class="flex-grow-1">
                    <h1 class="h3 mb-0">@Model.Title</h1>
                    <p class="text-muted mb-0">
                        <i class="bi bi-calendar3 me-1"></i>@Model.CreationDate.ToString("dd/MM/yyyy HH:mm")
                    </p>
                </div>
                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.idNotes" class="btn btn-primary">
                        <i class="bi bi-pencil me-1"></i>Editar
                    </a>
                    <button type="button" class="btn btn-outline-danger" id="btnDelete">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </div>

            <!-- Contenido -->
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div style="white-space: pre-wrap;">@Model.Content</div>
                </div>
            </div>

            <!-- Footer -->
            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-link text-muted">
                    <i class="bi bi-arrow-left me-1"></i>Volver a mis notas
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Modal Eliminar -->
<div class="modal fade" id="modalDelete" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="bi bi-exclamation-triangle me-2"></i>Eliminar Nota</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>¿Eliminar "<strong>@Model.Title</strong>"?</p>
                <p class="text-muted small mb-0">Esta acción no se puede deshacer.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <a href="@Url.Action("Delete", "Notes", new { id = Model.idNotes })" class="btn btn-danger">
                    <i class="bi bi-trash me-1"></i>Eliminar
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function() {
            var btnDelete = document.getElementById('btnDelete');
            var modalDelete = document.getElementById('modalDelete');

            if (btnDelete && modalDelete && typeof bootstrap !== 'undefined') {
                btnDelete.addEventListener('click', function() {
                    new bootstrap.Modal(modalDelete).show();
                });
            }
        })();
    </script>
}