@model FollowUpWorks.DTOs.NoteClassDTO
@{
    ViewData["Title"] = "Nueva Nota";
}
<div class="mt-5 pt-4"></div>
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="d-flex align-items-center mb-4">
                <a asp-action="Index" class="btn btn-outline-secondary me-3">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <div>
                    <h1 class="h3 mb-0">Nueva Nota</h1>
                    <p class="text-muted mb-0">Crea una nueva nota</p>
                </div>
            </div>

            <!-- Formulario -->
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" id="formCreateNote">
                        @Html.AntiForgeryToken()

                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-semibold">
                                Título <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Title" class="form-control form-control-lg"
                                   placeholder="Título de la nota" maxlength="100" required />
                            <div class="d-flex justify-content-between mt-1">
                                <span asp-validation-for="Title" class="text-danger small"></span>
                                <small class="text-muted"><span id="titleChars">0</span>/100</small>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Content" class="form-label fw-semibold">
                                Contenido <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="Content" class="form-control" rows="8"
                                      placeholder="Escribe el contenido de tu nota..." required></textarea>
                            <div class="d-flex justify-content-between mt-1">
                                <span asp-validation-for="Content" class="text-danger small"></span>
                                <small class="text-muted">
                                    <span id="contentChars">0</span> caracteres |
                                    <span id="contentWords">0</span> palabras
                                </small>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary px-4" id="btnSubmit">
                                <i class="bi bi-check-lg me-2"></i>Guardar Nota
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function() {
            var form = document.getElementById('formCreateNote');
            var titleInput = document.getElementById('Title');
            var contentInput = document.getElementById('Content');
            var titleChars = document.getElementById('titleChars');
            var contentChars = document.getElementById('contentChars');
            var contentWords = document.getElementById('contentWords');
            var btnSubmit = document.getElementById('btnSubmit');

            // Contador título
            if (titleInput && titleChars) {
                titleInput.addEventListener('input', function() {
                    titleChars.textContent = this.value.length;
                });
            }

            // Contador contenido
            if (contentInput && contentChars && contentWords) {
                contentInput.addEventListener('input', function() {
                    var text = this.value;
                    contentChars.textContent = text.length;
                    var words = text.trim().split(/\s+/).filter(function(w) { return w.length > 0; });
                    contentWords.textContent = words.length;
                });
            }

            // Submit
            if (form && btnSubmit) {
                form.addEventListener('submit', function(e) {
                    var title = titleInput ? titleInput.value.trim() : '';
                    var content = contentInput ? contentInput.value.trim() : '';

                    if (!title || !content) {
                        e.preventDefault();
                        alert('Completa todos los campos obligatorios');
                        return;
                    }

                    btnSubmit.disabled = true;
                    btnSubmit.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Guardando...';
                });
            }
        })();
    </script>
}