@model List<FollowUpWorks.DTOs.SurveyClassDTO>
@{
    ViewData["Title"] = "Encuestas";
    var responseCounts = ViewBag.ResponseCounts as Dictionary<Guid, int> ?? new Dictionary<Guid, int>();
}
<div class="mt-5 pt-4"></div>
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1"><i class="bi bi-clipboard2-data me-2"></i>Gestión de Encuestas</h1>
            <p class="text-muted mb-0">Crea, administra y analiza tus encuestas</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i>Nueva Encuesta
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 opacity-75">Total Encuestas</h6>
                    <h2 class="mb-0">@Model.Count</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 opacity-75">Activas</h6>
                    <h2 class="mb-0">@Model.Count(s => s.IsActive)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 opacity-75">Total Respuestas</h6>
                    <h2 class="mb-0">@responseCounts.Values.Sum()</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 opacity-75">Total Preguntas</h6>
                    <h2 class="mb-0">@Model.Sum(s => s.Questions.Count)</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Listado de Encuestas</h5>
                </div>
                <div class="col-auto">
                    <input type="text" id="searchInput" class="form-control form-control-sm" placeholder="Buscar...">
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="surveysTable">
                        <thead class="table-light">
                            <tr>
                                <th>Encuesta</th>
                                <th class="text-center">Preguntas</th>
                                <th class="text-center">Respuestas</th>
                                <th class="text-center">Estado</th>
                                <th>Creada</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var survey in Model.OrderByDescending(s => s.CreatedAt))
                            {
                                var respCount = responseCounts.ContainsKey(survey.Id) ? responseCounts[survey.Id] : 0;
                                <tr>
                                    <td>
                                        <h6 class="mb-0">@survey.Title</h6>
                                        <small class="text-muted">@(survey.Description.Length > 50 ? survey.Description.Substring(0, 50) + "..." : survey.Description)</small>
                                    </td>
                                    <td class="text-center"><span class="badge bg-secondary">@survey.Questions.Count</span></td>
                                    <td class="text-center"><span class="badge bg-info">@respCount</span></td>
                                    <td class="text-center">
                                        @if (survey.IsActive)
                                        {
                                            <span class="badge bg-success">Activa</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactiva</span>
                                        }
                                    </td>
                                    <td><small>@survey.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small></td>
                                    <td>
                                        <div class="d-flex justify-content-end gap-1">
                                            <a asp-action="Respond" asp-route-id="@survey.Id" class="btn btn-sm btn-outline-success" title="Responder">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-action="Dashboard" asp-route-id="@survey.Id" class="btn btn-sm btn-outline-info" title="Dashboard">
                                                <i class="bi bi-graph-up"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@survey.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@survey.Id">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>

                                        <div class="modal fade" id="deleteModal-@survey.Id" tabindex="-1">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Confirmar Eliminación</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body text-center py-4">
                                                        <i class="bi bi-exclamation-triangle text-warning display-4"></i>
                                                        <h5 class="mt-3">¿Eliminar "@survey.Title"?</h5>
                                                        <p class="text-muted">Se eliminarán también @respCount respuesta(s).</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                        <form asp-action="Delete" asp-route-id="@survey.Id" method="post" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-danger">
                                                                <i class="bi bi-trash me-1"></i>Eliminar
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox text-muted display-1"></i>
                    <h5 class="mt-3 text-muted">No hay encuestas creadas</h5>
                    <a asp-action="Create" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-lg me-1"></i>Crear Encuesta
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/SurveyScript.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            initIndexPage();
        });
    </script>
}