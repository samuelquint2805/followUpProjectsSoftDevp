@{
    ViewData["Title"] = "Gracias";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <div class="mb-4">
                <div class="success-checkmark">
                    <div class="check-icon">
                        <span class="icon-line line-tip"></span>
                        <span class="icon-line line-long"></span>
                        <div class="icon-circle"></div>
                        <div class="icon-fix"></div>
                    </div>
                </div>
            </div>

            <h1 class="display-4 fw-bold text-success mb-3">¡Gracias!</h1>
            <p class="lead text-muted mb-4">
                Tu respuesta ha sido registrada exitosamente.
            </p>

            <a asp-action="Index" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-house me-2"></i>Volver al Inicio
            </a>

            <div class="mt-5">
                <p class="text-muted small">
                    <i class="bi bi-shield-check me-1"></i>Tu respuesta es anónima
                </p>
            </div>
        </div>
    </div>
</div>
@section scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
}
