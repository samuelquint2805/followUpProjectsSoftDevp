@model FollowUpWorks.DTOs.SurveyAnalyticsDTO
@{
    ViewData["Title"] = "Dashboard";
    var jsonOptions = new System.Text.Json.JsonSerializerOptions { PropertyNamingPolicy = System.Text.Json.JsonNamingPolicy.CamelCase };
    var statsJson = System.Text.Json.JsonSerializer.Serialize(Model.QuestionStats, jsonOptions);
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <a asp-action="Index" class="btn btn-outline-secondary me-3">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h1 class="h3 mb-0"><i class="bi bi-graph-up me-2"></i>Dashboard</h1>
                <p class="text-muted mb-0">@Model.SurveyTitle</p>
            </div>
        </div>
        <button class="btn btn-outline-primary" onclick="window.print()">
            <i class="bi bi-printer me-1"></i>Imprimir Reporte
        </button>
    </div>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card stat-card primary text-black">
                <div class="card-body">
                    <h6 class="text-white-50 mb-1">Total Respuestas</h6>
                    <h2 class="mb-0">@Model.TotalResponses</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card stat-card success text-white">
                <div class="card-body">
                    <h6 class="text-white-50 mb-1">Preguntas</h6>
                    <h2 class="mb-0">@Model.QuestionStats.Count</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card stat-card info text-white">
                <div class="card-body">
                    <h6 class="text-white-50 mb-1">Completitud</h6>
                    <h2 class="mb-0">100%</h2>
                </div>
            </div>
        </div>
    </div>

    @if (Model.TotalResponses == 0)
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox text-muted display-1"></i>
                <h4 class="mt-3 text-muted">Sin respuestas aún</h4>
                <a asp-action="Respond" asp-route-id="@Model.SurveyId" class="btn btn-primary mt-2">
                    <i class="bi bi-link-45deg me-1"></i>Ver Encuesta
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var q in Model.QuestionStats)
            {
                var canvasId = "chart_" + q.QuestionId.ToString("N");
                <div class="col-lg-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="mb-0">@q.QuestionText</h6>
                                <span class="badge bg-secondary">@q.Type</span>
                            </div>
                        </div>
                        <div class="card-body">
                            @if (q.Type == "SingleChoice" || q.Type == "MultipleChoice")
                            {
                                <canvas id="@canvasId" height="200"></canvas>
                                <div class="table-responsive mt-3">
                                    <table class="table table-sm table-borderless mb-0">
                                        <tbody>
                                            @{
                                                var total = q.OptionCounts.Values.Sum();
                                                if (total == 0) total = 1;
                                            }
                                            @foreach (var opt in q.OptionCounts)
                                            {
                                                var pct = (double)opt.Value / total * 100;
                                                <tr>
                                                    <td class="text-truncate" style="max-width: 150px;">@opt.Key</td>
                                                    <td style="width: 50%;">
                                                        <div class="progress" style="height: 20px;">
                                                            <div class="progress-bar" style="width: @pct.ToString("F0")%">
                                                                @pct.ToString("F1")%
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="text-end fw-bold">@opt.Value</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else if (q.Type == "Rating")
                            {
                                <div class="text-center mb-4">
                                    <div class="display-1 fw-bold text-warning">
                                        @(q.AverageRating.HasValue? q.AverageRating.Value.ToString("F1") : "N/A")
                                    </div>
                                    <div class="text-muted">Promedio</div>
                                    <div class="mt-2">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            var filled = q.AverageRating.HasValue && i <= q.AverageRating.Value;
                                            <i class="bi @(filled ? "bi-star-fill" : "bi-star") text-warning fs-4"></i>
                                        }
                                    </div>
                                </div>
                                <canvas id="@canvasId" height="150"></canvas>
                            }
                            else if (q.Type == "Text")
                            {
                                <div style="max-height: 300px; overflow-y: auto;">
                                    @if (q.TextResponses.Any())
                                    {
                                        @foreach (var resp in q.TextResponses.Take(10))
                                        {
                                            <div class="bg-light rounded p-3 mb-2">
                                                <i class="bi bi-chat-quote me-2 text-primary"></i>"@resp"
                                            </div>
                                        }
                                        @if (q.TextResponses.Count > 10)
                                        {
                                            <p class="text-muted text-center">+ @(q.TextResponses.Count - 10) más...</p>
                                        }
                                    }
                                    else
                                    {
                                        <p class="text-muted text-center mb-0">Sin respuestas</p>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/SurveyStyles.css" />
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/SurveyScript.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var stats = @Html.Raw(statsJson);
            SurveyDashboard.init(stats);
        });
    </script>
}