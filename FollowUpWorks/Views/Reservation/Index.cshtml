@model List<FollowUpWorks.Models.ReservationClass>
@{
    ViewData["Title"] = "Gestión de Reservas";
}
<div class="mt-5 pt-4"></div>
<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h1 class="h2 mb-1">
                        <i class="bi bi-calendar-check me-2 text-primary"></i>Reservas de Servicios
                    </h1>
                    <p class="text-muted mb-0">Gestiona las citas y reservaciones de tus clientes</p>
                </div>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle me-2"></i>Nueva Reserva
                </a>
            </div>
        </div>
    </div>

    <!-- Mensajes -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Errors"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Errors"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtros -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-search me-1"></i>Buscar Cliente
                    </label>
                    <input type="text" id="searchName" class="form-control" placeholder="Nombre del cliente...">
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-calendar me-1"></i>Fecha
                    </label>
                    <input type="date" id="filterDate" class="form-control">
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-people me-1"></i>N° Personas
                    </label>
                    <select id="filterGuests" class="form-select">
                        <option value="">Todos</option>
                        <option value="1">1 persona</option>
                        <option value="2">2 personas</option>
                        <option value="3">3-4 personas</option>
                        <option value="5">5+ personas</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-funnel me-1"></i>Estado
                    </label>
                    <select id="filterStatus" class="form-select">
                        <option value="">Todos</option>
                        <option value="upcoming">Próximas</option>
                        <option value="today">Hoy</option>
                        <option value="past">Pasadas</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button id="btnClearFilters" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-x-circle me-1"></i>Limpiar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Estadísticas Rápidas -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-check fs-2"></i>
                    <h3 class="mb-0 mt-2">@Model.Count</h3>
                    <small>Total Reservas</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-event fs-2"></i>
                    <h3 class="mb-0 mt-2">@Model.Count(r => r.ReservationDate.Date == DateTime.Today)</h3>
                    <small>Reservas Hoy</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <i class="bi bi-clock fs-2"></i>
                    <h3 class="mb-0 mt-2">@Model.Count(r => r.ReservationDate > DateTime.Now)</h3>
                    <small>Próximas</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center">
                    <i class="bi bi-people fs-2"></i>
                    <h3 class="mb-0 mt-2">@Model.Sum(r => r.NumberOfGuests)</h3>
                    <small>Total Personas</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de Reservas -->
    <div class="card shadow-sm">
        <div class="card-header bg-black py-3">
            <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Listado de Reservas</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Cliente</th>
                                <th scope="col">Fecha y Hora</th>
                                <th scope="col" class="text-center">Personas</th>
                                <th scope="col">Contacto</th>
                                <th scope="col" class="text-center">Estado</th>
                                <th scope="col" class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var reservation in Model.OrderBy(r => r.ReservationDate))
                            {
                                var isPast = reservation.ReservationDate < DateTime.Now;
                                var isToday = reservation.ReservationDate.Date == DateTime.Today;
                                var statusClass = isPast ? "bg-secondary" : (isToday ? "bg-success" : "bg-primary");
                                var statusText = isPast ? "Completada" : (isToday ? "Hoy" : "Próxima");

                                <tr class="reservation-row"
                                    data-name="@reservation.Username.ToLower()"
                                    data-date="@reservation.ReservationDate.ToString("yyyy-MM-dd")"
                                    data-guests="@reservation.NumberOfGuests"
                                    data-status="@(isPast ? "past" : (isToday ? "today" : "upcoming"))">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle bg-primary text-black me-3">
                                                @reservation.Username.Substring(0, 1).ToUpper()
                                            </div>
                                            <div>
                                                <h6 class="mb-0 text-black">@reservation.Username</h6>
                                                <small class="text-muted">ID: @reservation.idReservation.ToString().Substring(0, 8)...</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <i class="bi bi-calendar3 me-1 text-primary"></i>
                                            @reservation.ReservationDate.ToString("dd MMM yyyy")
                                        </div>
                                        <small class="text-muted">
                                            <i class="bi bi-clock me-1"></i>
                                            @reservation.ReservationDate.ToString("hh:mm tt")
                                        </small>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-light text-dark fs-6">
                                            <i class="bi bi-people me-1"></i>@reservation.NumberOfGuests
                                        </span>
                                    </td>
                                    <td>
                                        <small>
                                            <i class="bi bi-envelope me-1 text-muted"></i>
                                            @reservation.ContactInfo
                                        </small>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge @statusClass">@statusText</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@reservation.idReservation"
                                               class="btn btn-sm btn-outline-primary" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger btn-delete"
                                                    data-id="@reservation.idReservation"
                                                    data-name="@reservation.Username"
                                                    data-date="@reservation.ReservationDate.ToString("dd/MM/yyyy HH:mm")"
                                                    title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-calendar-x display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">No hay reservas registradas</h4>
                    <p class="text-muted">Comienza creando una nueva reserva</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Crear Primera Reserva
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Mensaje sin resultados -->
    <div id="noResultsMessage" class="alert alert-info mt-3" style="display: none;">
        <i class="bi bi-info-circle me-2"></i>No se encontraron reservas con los filtros aplicados.
    </div>
</div>

<!-- Modal de Confirmación de Reserva -->
<div class="modal fade" id="confirmationModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0">
            <div class="modal-body text-center py-5">
                <div class="confirmation-checkmark mb-4">
                    <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
                        <circle class="checkmark-circle" cx="26" cy="26" r="25" fill="none" />
                        <path class="checkmark-check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8" />
                    </svg>
                </div>
                <h3 class="text-success mb-3">¡Reserva Confirmada!</h3>
                <p class="text-muted mb-4">Tu reserva ha sido registrada exitosamente</p>

                <div class="card bg-light mx-auto" style="max-width: 300px;">
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Cliente:</span>
                            <strong id="confirmName">-</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Fecha:</span>
                            <strong id="confirmDate">-</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Hora:</span>
                            <strong id="confirmTime">-</strong>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Personas:</span>
                            <strong id="confirmGuests">-</strong>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <p class="small text-muted mb-3">
                        <i class="bi bi-envelope me-1"></i>
                        Se ha enviado un correo de confirmación
                    </p>
                    <button type="button" class="btn btn-success btn-lg px-5" data-bs-dismiss="modal">
                        <i class="bi bi-check-lg me-2"></i>Entendido
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Eliminación -->
<div class="modal fade" id="deleteModal" tabindex="-1" data-delete-url="@Url.Action("Delete", "Reservation")">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle me-2"></i>Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center py-4">
                <i class="bi bi-trash display-4 text-danger"></i>
                <h5 class="mt-3">¿Eliminar esta reserva?</h5>
                <p class="mb-1">Cliente: <strong id="reservationNameToDelete"></strong></p>
                <p class="text-muted">Fecha: <span id="reservationDateToDelete"></span></p>
                <p class="text-muted small">Esta acción no se puede deshacer.</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x me-1"></i>Cancelar
                </button>
                <form id="deleteForm" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Eliminar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/ReservationScript.js"></script>
}

